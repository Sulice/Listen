{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "es2015",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"removeComments": true,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es5",
		"typeRoots": [ "./node_modules/@types/" ],
		"types": [ "node", "jquery", "rx" ],
        "lib": ["es2015", "dom"],
        "outDir": "aot"
	},

	"files": [
		"app/app.module.ts",
		"app/main.prod.ts"
	],

	"angularCompilerOptions": {
		"genDir": "aot",
		"skipMetadataEmit" : true
	}
}

