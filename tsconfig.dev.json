{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es6"
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules",
        "app/main.prod.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true,
        "transpileOnly": true,
        "useTranspileModule": true,
        "silent": true
    }
}
